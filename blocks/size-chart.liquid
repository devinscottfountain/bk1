<div li-block="Size Chart">
    <!-- Chart Image using file_reference metafield - try different approaches -->
    {% if product.metafields.custom.chart_image %}
        <img src="{{ product.metafields.custom.chart_image | image_url: width: 500 }}" 
             alt="{{ product.metafields.custom.chart_image.alt }}" 
             loading="lazy">
    {% else %}
        <img src="{{ 'hassaan-qaiser-bKfkhVRAJTQ-unsplash_1hassaan-qaiser-bKfkhVRAJTQ-unsplash.avif' | asset_url }}" 
             loading="lazy" 
             alt="">
    {% endif %}
    
    <!-- HTML Table using direct Liquid (not Liquify) -->
    {% if product.metafields.custom.size_tables.value %}
        <div class="size-chart-content">
            {{ product.metafields.custom.size_tables.value }}
        </div>
    {% else %}
        <p>No size table data available</p>
    {% endif %}
    
</div>
