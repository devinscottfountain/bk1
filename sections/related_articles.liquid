<div class="w-layout-blockcontainer container w-container">
          {% assign currentArticle = article.title %}
          <div class="row">
            <div class="col col-lg-6 col-sm-12">
              <h2>
{{ section.settings.text_heading }}
</h2>
            </div>
            <div class="col col-lg-6 col-sm-12">
              <div li-for:inside="article in blog.articles limit: 2" class="row">
        {% for article in blog.articles limit: 2 %}                            
                
                            {% if article.title != currentArticle %}    <div li-if="article.title != currentArticle" class="col col-lg-6 col-md-12 col-sm-6 col-xs-12">
    
                  <a li-object:href="article.url" href="{{ article.url }}" class="blog_item u-vflex-stretch-top u-vgap-16 w-inline-block"><img src="{{ article.image | image_url: width: 908 }}" loading="lazy" li-object:alt="article.image.alt" li-object:src="article.image | image_url: width: 908" alt="{{ article.image.alt }}" class="u-aspect-4x5">
                    <h3 li-object="article.title" class="eyebrow">{{ article.title }}</h3>
                  </a>
                    </div>
{% endif %}
                            
              
                    {% endfor %}    </div>
            </div>
          </div>
        </div> {% schema %} {
    "tag": "section",
    "name": "Related Articles",
    "class": "section",
    "settings": [
        {
            "id": "text_heading",
            "type": "text",
            "label": "Heading",
            "default": "Dive deeper"
        }
    ],
    "presets": [
        {
            "name": "Related Articles",
            "category": "Liquify",
            "blocks": []
        }
    ],
    "enabled_on": {
        "templates": [
            "article"
        ]
    }
} {% endschema %}